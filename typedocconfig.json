{
  "compilerOptions": {
    "lib": ["es2015"],
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "include": ["src/**/*"],

  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
